<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/mather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mather Hall \n\nMon-Fri: 7:30am-2:00pm &amp; 5:30pm-8:00pm\nSat-Sun: 10:30am—2:00pm &amp; 5:30pm—8:00pm\n"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mather"
        android:text="Cave \n\nMon-Thurs: 11:00am—Midnight \nFri: 11:00am—2:00am \nSat: 3:00pm—2:00am\nSun: 3:00pm—Midnight\n"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cave"
        android:text="Bistro \n\nMon-Thurs: 11:30am-10:00pm \nFri: 11:30am-3:00pm\nSat: 6:00pm-9:00pm\nSun: 6:00pm-10:00pm\n"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@android:color/background_light"
        app:menu="@menu/bottom_navigation" />

</RelativeLayout>