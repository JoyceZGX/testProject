<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity">

    <TextView
        android:id="@+id/report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Trinity Dining Hall Report"
        android:textColor="@color/dark_blue_bck"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:text="Trinity Dining Hall Report" />

    <LinearLayout
        android:id="@+id/top3_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/report_title"
        android:background="#36FF7904"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/top3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Top 3 Popular Dish"
            android:textColor="#F27B05"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/top1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="Scrambled Eggs "
            android:textColor="#F27B05"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/top2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="Vegetarian Mexican Lasagna "
            android:textColor="#F27B05"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/top3_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="Adobo Pork Loin"
            android:textColor="#F27B05"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lowest3_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top3_list"
        android:background="#2DBBBBBB"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/low3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Least 3 Popular Dish"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/low1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="Lyonnaise Potatoes"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/low2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="Broccoli Tofu Stir Fry"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/low3_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="Pigeon Peas Brown Rice"
            android:textSize="20sp" />



    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        app:itemBackground="@android:color/background_light"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />


</RelativeLayout>